<MinhaTela@GridLayout>:
  cols: 2
  rows: 2
  GridButton:
    size_hint: .5, .1
    pos_hint: {"center_x":.5, "center_y": .4}
    ImageButton:
      size_hint: .5, .5
      pos_hint: {"left":1., "top": 1}
      source: I('image.png')
      on_press: root.canalYt()

    ImageButton:
      size_hint: .5, .5
      pos_hint: {"right":0.8, "top": 1}
      source: I('instagram.png')
      on_press: root.insta()

    Label:
      size_hint: .5, 1
      height: 50
      pos_hint: {"center_x":0.2, "center_y": 0.1}
      text: "Discord:"
      color: C("#F0EFF4")
    Label:
      size_hint: .5, 1
      height: 50
      pos_hint: {"center_x":0.6, "center_y": 0.1}
      text: "! Toni#2202"
      color: C("#5658DD")

  Label:
    size_hint: None, None
    size: 350, 50
    x: 200
    y: 200
    
  GridButton:
    size_hint: .3, 1
    Button:
      size_hint: .3, 0.1
      pos_hint: {"center_x":.5, "top": 0.9}
      text: "F"
      on_press: root.aoClickF()
      background_color: C("#5658DD")
    Button:
      size_hint: .3, 0.1
      pos_hint: {"center_x":.5, "top": 0.8}
